.chat-side
  .side-header
    .side-header_box
      %p.side-header_box_username
        = current_user.name
      %ul.side-header_box_menu
        %li.side-header_box_menu_new-group
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.side-header_box_edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog',  class: 'icon')
  .groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group), class:"group" do
        %p.group_group-name
          = group.name    
        %p.group_letest-message
          = group.show_last_message